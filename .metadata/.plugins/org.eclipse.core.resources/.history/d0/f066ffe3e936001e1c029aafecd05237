package com.codingdojo.lista.controllers;

import java.util.List;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import com.codingdojo.lista.models.Contact;
import com.codingdojo.lista.models.Student;
import com.codingdojo.lista.services.ContactService;
import com.codingdojo.lista.services.StudentService;

import jakarta.validation.Valid;

@Controller
public class HomeController {
	private final StudentService studentService;
	private final ContactService contactService;

	public HomeController(ContactService contactService, StudentService studentService) {
		this.studentService = studentService;
		this.contactService = contactService;
	}
	@RequestMapping("/students/new")
	public String newStudent(@Valid @ModelAttribute("student") Student student) {
		return "newStudent.jsp";
	}
	@RequestMapping(value="/contact/new", method=RequestMethod.POST)
	public String contactStudent(@Valid @ModelAttribute("contact") Contact contact, BindingResult result) {
		if (result.hasErrors()) {
			return "contactInfo.jsp";
		}
		contactService.saveContact(contact);
		return "redirect:/contact/new";
	}
	
	@RequestMapping(value="/students/new", method=RequestMethod.POST)
	public String createStudent(@Valid @ModelAttribute("student") Student student, BindingResult result) {
		if (result.hasErrors()) {
			return "newStudent.jsp";
		}
		studentService.create(student);
		return "redirect:/students/new";
	}
	
	@RequestMapping("/contact/new")
	public String newContact(Model model,@Valid @ModelAttribute("contact") Contact contact) {
		List<Student> student = studentService.personasSinContacto();
		model.addAttribute("students", student);
		return "contactInfo.jsp";
	}
	
	
	/*@RequestMapping("/students")
	 public String profile(Model model) {
		 Student student = studentService.findAll();
		 Contact contact = contactService.findAll();
	     model.addAttribute("student", student);
	     model.addAttribute("contact", contact);
	     
	     return "students.jsp";
	}*/
	
	/*@GetMapping("/students")
    public String showStudents(Model model) {
        List<StudentContactDTO> studentContactDTOs = studentService.getAllStudentsWithContacts();
        model.addAttribute("students", studentContactDTOs);
        return "studentsPage";
    }*/

}
