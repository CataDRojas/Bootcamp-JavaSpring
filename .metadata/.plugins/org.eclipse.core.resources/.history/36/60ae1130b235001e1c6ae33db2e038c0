package com.codingdojo.lista.services;

import java.util.List;
import java.util.Optional;

import org.springframework.stereotype.Service;

import com.codingdojo.lista.models.Student;
import com.codingdojo.lista.repositories.PersonRepository;

@Service
public class PersonService {
		private final PersonRepository personRepository;

	public PersonService(PersonRepository personRepository) {
		this.personRepository = personRepository;
	}
	
	public List<Student> findAll() {
		return personRepository.findAll();
	}
	
	public List<Student> personasSinLicencia() {
		return personRepository.findByLicenseIsNull();
	}
	
	public Student create(Student student) {
		return personRepository.save(student);
	}
	
	public Student findUser(Long id) {
		Optional<Student> optionalPerson = personRepository.findById(id);
		if(optionalPerson.isPresent()) {
			return optionalPerson.get();
		} else {
			return null;
		}
	}

}
