package com.codingdojo.lookify.services;

import java.util.List;
import java.util.Optional;

import org.springframework.stereotype.Service;

import com.codingdojo.lookify.models.Lookify;
import com.codingdojo.lookify.repositories.SongRepository;

@Service
public class SongService {
	
	private final SongRepository songRepository;

	public SongService(SongRepository songRepository) {
		this.songRepository = songRepository;
	}
	public List<Lookify> allLookifys() {
		return songRepository.findAll();
	}

	public Lookify getLookifyById(Long id) {
        Optional<Lookify> optionalLookify = songRepository.findById(id);
        if(optionalLookify.isPresent()) {
            return optionalLookify.get();
        } else {
            return null;
        }
    }
    
    public List<Lookify> getArtistByName(String name) {
    	return songRepository.findArtistByName(name);
    }
    
    public List<Lookify> findTop10Lookifys() {
    	return songRepository.findTop10Lookifys();
    }
    public void deleteSong(Long id) {
		songRepository.deleteById(id);

	}
	
	
	

}
